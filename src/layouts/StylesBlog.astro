<style is:global is:inline>
  .post-heading {
    display: flex;
    margin-left: -1em;
  }

  .post-heading > .anchor {
    display: flex;
    align-items: center;
    text-decoration: none;
    width: 1em;
    color: var(--accent-color);
    font-size: 1em;
    font-weight: 800;
    opacity: 0;
    transition: opacity 0.2s;
  }

  .post-heading > .anchor:focus,
  .post-heading:hover > .anchor {
    opacity: 1;
  }

  :where(h1, h2, h3, h4, h5) + * {
    margin-top: 0 !important;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: var(--heading-color);
    font-size: inherit;
    font-weight: inherit;
    margin: 0;
  }

  h2 {
    font-weight: 700;
    font-size: 1.5em;
    margin-top: 2em;
    margin-bottom: 1em;
    line-height: 1.33;
  }

  h3 {
    font-weight: 600;
    font-size: 1.25em;
    margin-top: 1.6em;
    margin-bottom: 0.6em;
    line-height: 1.6;
  }

  h4 {
    font-weight: 600;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    line-height: 1.5;
  }

  h6 {
    color: var(--text-muted);
  }

  blockquote {
    border-left: 0.25rem solid var(--accent-color);
    margin: 1.6em 0;
    padding-left: 1em;
  }

  blockquote * {
    color: var(--text-muted);
    font-style: italic;
  }

  table {
    text-indent: 0;
    border-color: inherit;
    border-collapse: collapse;
  }

  table {
    width: 100%;
    table-layout: auto;
    text-align: left;
    margin-top: 2em;
    margin-bottom: 2em;
    font-size: 0.875em;
    line-height: 1.7;
  }

  thead {
    border-bottom: 1px solid var(--text-muted);
  }

  tr {
    border-bottom: 1px solid var(--page-accent-color);
  }

  tr:last-child {
    border: none;
  }

  th {
    color: var(--heading-color);
    font-weight: 600;
    vertical-align: bottom;
    padding: 0 0.6em 0.6em 0.6em;
  }

  :where(th, td):first-child {
    padding-left: 0;
  }

  td {
    vertical-align: baseline;
    padding: 0.6em;
  }

  pre.astro-code {
    border-radius: 0.8em;
    padding: 1.25em;
    font-size: 1em;
    line-height: 1.4;
  }
</style>
