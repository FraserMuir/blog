---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import PageMeta from "./PageMeta.astro";
import "../global.css";

export interface Props {
  title: string;
  date: Date;
}

const { title, date } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString("en-us", {
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <PageMeta />
  </head>

  <body>
    <Header />
    <main id="main">
      <section class="blog-post prose prose-sleek max-w-none">
        <h1 class="m-0 mb-[0.25em]">{title}</h1>
        <time class="text-text-muted mb-[2em] block">{formattedDate}</time>
        <slot />
      </section>
    </main>
    <Footer />
  </body>
</html>
